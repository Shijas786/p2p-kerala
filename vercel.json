{
    "version": 2,
    "builds": [
        {
            "src": "api/index.ts",
            "use": "@vercel/node"
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/api/stats",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/public/$1"
        }
    ]
}