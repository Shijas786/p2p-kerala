{
    "version": 2,
    "builds": [
        {
            "src": "api/index.ts",
            "use": "@vercel/node"
        },
        {
            "src": "api/ads.ts",
            "use": "@vercel/node"
        },
        {
            "src": "api/auth.ts",
            "use": "@vercel/node"
        },
        {
            "src": "api/trades.ts",
            "use": "@vercel/node"
        },
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/api/stats",
            "destination": "/api/index.ts"
        },
        {
            "source": "/api/ads",
            "destination": "/api/ads.ts"
        },
        {
            "source": "/api/auth",
            "destination": "/api/auth.ts"
        },
        {
            "source": "/api/trades",
            "destination": "/api/trades.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/public/$1"
        }
    ]
}